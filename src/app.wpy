                    "text": "我的",
                    "iconPath": "images/me.png",
                    "selectedIconPath": "images/me.png"
                }
            ]
        }
    }

    globalData = {
        userInfo: null,
        baseUrl: 'http://193.112.125.76:8080'
    }

    constructor () {
        super()
        this.use('requestfix')
        this.use('promisify')
    }

    onLaunch() {
    }

    sleep (s) {
        return new Promise((resolve, reject) => {
            setTimeout(() => {
                resolve('promise resolved')
            }, s * 1000)
        })
    }

    async testAsync () {
        const data = await this.sleep(3)
        console.log(data)
    }

    getUserInfo(cb) {
        const that = this
        if (this.globalData.userInfo) {
            return this.globalData.userInfo
        }
        wepy.getUserInfo({
            success (res) {
                that.globalData.userInfo = res.userInfo
                cb && cb(res.userInfo)
            }
        })
    }
}
</script>
