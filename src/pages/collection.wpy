<style type="less">
    .weui-navbar__item.weui-bar__item_on {
        color : #800080;
        width: 20%;
    }
    .tab_item {
        height: 100%;
    }
    page, .body{
        height: 100%;
        font-family: '\5FAE\8F6F\96C5\9ED1', arial;
        background-color: #f0eff5;
    }
    .weui-tab__panel {
        margin-bottom: 20rpx;
        padding-top: 20rpx;
    }

</style>

<template>
    <view>
        <view class="page__bd">
            <view class="weui-tab">
                <view class="weui-tab__panel">
                    <view class="weui-tab__content">
                        <repeat for="{{collectionList}}" key="index" index="index" item="item">
                            <shareContent
                                :messageId="item.messageId"
                                :message="item.message"
                                :timestamp="item.timestamp"
                                :likeNum="item.likeNum"
                                :messageType="item.messageType" />
                        </repeat>
                    </view>
                </view>
            </view>
        </view>

    </view>
</template>

<script>
    import wepy from 'wepy'
    import BottomTabBar from '../components/tab'
    import ShareContent from '../components/shareContent'
    export default class Collection extends wepy.page {
        config = {
            'navigationBarTitleText': '广场'
        }

        components = {
            bottomTabBar: BottomTabBar,
            shareContent: ShareContent
        }

        data = {
            activeIndex: 0,
            sliderOffset: 0,
            sliderLeft: 0,
            collectionList: []
        }

        methods = {
            tabClick (e) {
                this.sliderOffset = e.currentTarget.offsetLeft
                this.activeIndex = e.currentTarget.id
            }
        }

        events = {
            'toShareDetail': (target) => {
                console.log(target)
                this.$root.$navigate({url: './shareContentDetail'})
            }
        }
        async sendData() {
            var id = wx.getStorageSync('userId')
            var that = this
            let res = await wepy.request({
                url: `${that.$parent.globalData.baseUrl}/user/getCollect/${id}`,
                method: 'GET'
            })
            console.log(res.data.respondBody)
            this.collectionList = res.data.respondBody
            this.$apply()
        }
        onShow() {
            this.sendData()
        }
    }
</script>
