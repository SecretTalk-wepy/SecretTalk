<template>
    <view>
        <view class="header-wrapper">
            <image class="header-bg-img" src="../images/bg.jpg" mode="aspectFill" />
            <button class="btn-send" @tap="editNewSecret"><image src="../images/btn.jpg"/></button>
        </view>
        <view class="navbar">
            <view class="page__bd">
                <view class="weui-tab">
                    <view class="weui-navbar">
                        <view wx:for="{{tabs}}" wx:key="*this" id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" @tap="tabClick">
                            <view class="weui-navbar__title">{{item}}</view>
                        </view>
                        <view class="weui-navbar__slider" style="background-color: #800080; left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px); width: 96px"></view>
                    </view>
                    <view class="weui-tab__panel">
                        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                            <repeat for="{{sentList}}" key="index" index="index" item="item">
                                <msgItem 
                                    :content="item.content"
                                    :time="item.time"
                                    :color="item.color"
                                    :bottleId="item.bottleId" />
                            </repeat>
                        </view>
                        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
                            <repeat for="{{recvList}}" key="index" index="index" item="item">
                                <msgItem 
                                    :content="item.content"
                                    :time="item.time" 
                                    :color="item.color"
                                    :bottleId="item.bottleId" />
                            </repeat>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</template>

<script>
    import wepy from 'wepy'
    import MsgItem from '../components/msgItem'

    const sliderWidth = 96
    let userId;

    export default class Main extends wepy.page {
        config = {
            'navigationBarTitleText': '秘密说'
        }

        components = {
            msgItem: MsgItem
        }

        data = {
            tabs: ['我发出的', '我收到的'],
            activeIndex: 0,
            sliderOffset: 0,
            sliderLeft: 0,
            recvList: [],
            sentList: []
        }

        methods = {
            async tabClick (e) {
                this.sliderOffset = e.currentTarget.offsetLeft
                this.activeIndex = e.currentTarget.id
                if (e.currentTarget.id === '0') {
                    this.setData({
                        sentList: await this.getSentList()
                    })
                } else {
                    this.setData({
                        recvList: await this.getRecvList()
                    })
                }
            },
            editNewSecret() {
                this.$root.$navigate({url: './edit_secret'})
            }
        }

        events = {
            'toDetail': (target) => {
                console.log(target)
                this.$root.$navigate({url: './secret_detail'})
            }
        }

        async onLoad () {
            console.log('load')
            let res = wx.getSystemInfoSync()
            this.sliderLeft = (res.windowWidth / this.tabs.length - sliderWidth) / 2
            this.sliderOffset = res.windowWidth / this.tabs.length * this.activeIndex
            userId = wx.getStorageSync('userId')
            this.setData({
                sentList: await this.getSentList()
            })
        }

        async getSentList () {
            let res = await wepy.request({
                url: `${this.$parent.globalData.baseUrl}/secret/getMySend/${userId}`,
                method: 'GET',
            })
            let keys = Object.keys(res.data.respondBody);
            let sentList = keys.map((key) => {
                let {content, receiverId, sendId, timestamp} = res.data.respondBody[key][0];
                console.log(res.data.respondBody[key]);
                return {
                    bottleId: key,
                    content: content,
                    userId: receiverId === userId ? sendId : receiverId,
                    time: new Date(timestamp).toString().substr(10, 12)
                }
            })
            console.log(res);
            return sentList;
        }

        async getRecvList () {
            let res = await wepy.request({
                url: `${this.$parent.globalData.baseUrl}/secret/getMyReceive/${userId}`,
                method: 'GET',
            })
            let keys = Object.keys(res.data.respondBody);
            let sentList = keys.map((key) => {
                let {content, receiverId, sendId, timestamp} = res.data.respondBody[key][0];
                console.log(res.data.respondBody[key]);
                return {
                    bottleId: key,
                    content: content,
                    userId: receiverId === userId ? sendId : receiverId,
                    time: new Date(timestamp).toString().substr(10, 12)
                }
            })
            console.log(res);
            return sentList;
        }
    }

</script>
